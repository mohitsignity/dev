                <div class="container1">
                    <form action="/event/edit" method="post">
                      <div class="form-group">
                        <label for="email">Event Name:</label>
                        <input type="text" value="<%= eventRecord.local.name; %>" class="form-control" id="event" placeholder="Enter event" name="name">
                      </div>
                      <div class="form-group">
                        <label for="email">Event Description:</label>
                        <textarea cols="100" rows="10" name="description"><%= eventRecord.local.description; %></textarea>
                      </div>
                      <input type="hidden" value="<%= eventRecord._id; %>" class="form-control" id="id" name="id"/>  
                      <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                  
                </div>
